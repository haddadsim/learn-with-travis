{
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "plugins": ["flowtype", "compat", "prettier"],
  "rules": {
    "no-unexpected-multiline": 2,
    "compat/compat": 2,
    "quotes": [2, "single", { "avoidEscape": true }],
    "comma-dangle": ["error", "never"]
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
